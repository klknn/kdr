{
    "buildTypes":
    {
        "unittest-opt":
        {
            "buildOptions": ["unittests", "optimize", "inline"]
        },
        "unittest-native":
        {
            "buildOptions": ["unittests", "optimize", "inline"],
            "dflags-ldc": ["-mcpu=native"]
        },
        "release-native":
        {
            "buildOptions": ["releaseMode", "optimize", "inline", "noBoundsCheck"],
            "dflags-ldc": ["-mcpu=native"]
        }
    },
    "configurations": [
        {
            "name": "LV2",
            "targetType": "dynamicLibrary",
            "versions": [
                "LV2"
            ],
            "dependencies": {
                "dplug:lv2": "~>11.0.4",
            },
            "lflags-osx-ldc": [ "-exported_symbols_list", "resource/module-lv2.lst", "-dead_strip" ],
            "lflags-linux-ldc": [ "--version-script=resource/module-lv2.ver" ],
        },
	{
            "name": "VST2",
            "targetType": "dynamicLibrary",
            "versions": [
                "VST2"
            ],
            "dependencies": {
                "dplug:vst2": "~>11.0.4",
            },
            "lflags-osx-ldc": [ "-exported_symbols_list", "resource/module-vst.lst", "-dead_strip" ],
            "lflags-linux-ldc": [ "--version-script=resource/module-vst.ver" ]
        },
        {
            "name": "VST3",
            "targetType": "dynamicLibrary",
            "versions": [
                "VST3"
            ],
            "dependencies": {
                "dplug:vst3": "~>11.0.4",
            },
            "lflags-osx-ldc": [ "-exported_symbols_list", "resource/module-vst3.lst", "-dead_strip" ],
            "lflags-linux-ldc": [ "--version-script=resource/module-vst3.ver" ]
        },
        {
            "name": "AU",
            "versions": ["AU"],
            "targetType": "dynamicLibrary",
            "dependencies": {
                "dplug:au": "~>11.0.4",
            },
	    "lflags-osx-x86_64-ldc": [ "-exported_symbols_list", "resource/module-au.lst", "-dead_strip" ],
	    "lflags-osx-arm64-ldc": [ "-exported_symbols_list", "resource/module-au.lst" ]
        },
    ],
    "dependencies": {
        "dplug:pbr-widgets": "~>11.0.4",
        "mir-random": "~>2.2.15"
    },
    "dflags-linux-dmd": [
        "-defaultlib=libphobos2.a"
    ],
    "dflags-linux-ldc": [
        "-link-defaultlib-shared=false"
    ],
    "dflags-linux-x86_64-ldc": [
        "-fvisibility=hidden"
    ],
    "dflags-osx-ldc": [
        "-static"
    ],
    "dflags-windows-ldc": [
        "-mscrtlib=libcmt"
    ],
    "name": "synth2",
    "stringImportPaths": [
        ".",
        "resource",
    ],
    "targetType": "dynamicLibrary",
}
